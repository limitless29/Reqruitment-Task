
{
  "_comment" : "Create a AWS AMI ith AMZ Linux 2018 with Java and Tomcat",
  "variables": {
    "aws_access_key": "",
	"aws_secret_key": "",
	"ami_image_id": "ami-028188d9b49b32a80"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "{{user `ami_image_id`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "Req-Test-{{timestamp}}",
    "tags": {
          "Name": "Req-Test-{{timestamp}}",
          "Env": "Dev"    
}
 }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo yum update -y",
      "sudo yum install nginx -y",
      "sudo service nginx start",
      "sudo chkconfig nginx on",
	  "sudo yum install htop -y",
	  "sudo yum install tmux -y",
	  "sudo yum install cowsay -y"
      ]
  }]
}
